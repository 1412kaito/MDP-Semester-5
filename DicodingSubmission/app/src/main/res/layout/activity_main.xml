<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="10dp"
    >

    <ImageView
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:id="@+id/fotoku"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_below="@id/btnBack"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/foto"
        android:contentDescription="@string/contentdescpasfoto" />

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/strNama"
        android:textColor="#000000"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_below="@id/fotoku"
        android:id="@+id/namaku"
        />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="24sp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="@string/alamatemail"
        android:layout_below="@id/namaku"
        />

    <Button
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        />

</RelativeLayout>