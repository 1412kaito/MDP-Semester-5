<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvHistoryKeterangan" android:textStyle="bold"
        android:textColor="@android:color/black"
        style="@style/LineElement" android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvHistoryJenis" android:textSize="18sp"
            style="@style/FormElement" android:layout_weight="1" android:layout_gravity="start"/>

        <TextView android:textSize="18sp" android:textAlignment="viewEnd"
            android:layout_gravity="end"
            android:id="@+id/tvHistoryNominal" style="@style/FormElement"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>