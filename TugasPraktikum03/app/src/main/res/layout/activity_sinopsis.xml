<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SinopsisActivity"
    android:orientation="vertical"
    android:layout_margin="16dp">
    <TextView android:id="@+id/title" style="@style/LineElement" android:textSize="24sp"
        android:textColor="@android:color/black" />
    <TextView android:id="@+id/sinopsis" style="@style/LineElement" android:textSize="18sp"
        android:textColor="@android:color/black" />
    <LinearLayout style="@style/LineElement" android:orientation="horizontal" android:gravity="center">
        <Button android:id="@+id/btnBuy" style="@style/FlexElement" android:text="BUY TICKET" />
        <Button android:id="@id/btnBack" style="@style/FlexElement" android:text="BACK TO HOME" />
    </LinearLayout>

</LinearLayout>